<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="metal_quotation_product_price_view_form" model="ir.ui.view">
        <field name="name">metal.quotation.product.price.view.form</field>
        <field name="model">metal.quotation.product.price</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="qty" />
                            <field name="margin" />
                            <field name="price" />
                            <field name="total_subcontracting_cost" />
                        </group>
                        <group>
                            <field name="product_id" />
                        </group>
                        <field name="subcontract_ids">
                            <tree editable="bottom">
                                <field name="name" />
                                <field name="cost" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
